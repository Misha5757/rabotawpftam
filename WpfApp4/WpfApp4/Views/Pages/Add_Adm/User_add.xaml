<Page x:Class="WpfApp4.Views.Pages.Add_Adm.User_add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Views.Pages.Add_Adm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User_add" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Login" Width="150" />
                <TextBox x:Name="Login1" Width="150" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password" Width="150" />
                <TextBox x:Name="Password1" Width="150" />
                
            </StackPanel>
            <StackPanel>
                <ComboBox x:Name="Admins" />
            </StackPanel>
                <StackPanel>
                <Button Content="Добавить" Width="150" Height="20" Click="Button_Click"/>
                
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
